  "cookie": {
    //"domain": null,
    //"path": null,
    "httpOnly": true,
    "secure": false
    //"alwaysSetCookie": false
  },
  "themeHost": "http://127.0.0.1:7777",
  "themeUrl": "${themeHost}/5.0.1/default",
  "security": {
    "enabled": true,
    "hpp": true,
    "ienoopen": true,
    "noSniff": true,
    "csp": {
      "enabled": true,
      "scriptSrc": [
        "'self'",
        "'unsafe-inline'",
        "'unsafe-eval'",
        "${themeHost}"
      ],
      "styleSrc": [
        "'self'",
        "'unsafe-inline'",
        "${themeHost}"
      ],
      "fontSrc": [
        "'self'",
        "${themeHost}"
      ],
      "imgSrc": [
        "'self'",
        "${themeHost}"
      ],
      "reportOnly": false,
      "setAllHeaders": true,
      "disableAndroid": false
    },
    "frameguard": {
      "enabled": true,
      "mode": "deny",
      "allowFromPattern": ""
    },
    "xss": {
      "enabled": true,
      "setOnOldIE": true
    },
    "hpkp": {
      "enabled": true,
      "maxAge": 7776000000,
      "sha256s": [
        "AbCdEf123=",
        "ZyXwVu456="
      ],
      "includeSubdomains": true,
      "reportUri": null,
      "reportOnly": false
    },
    "hsts": {
      "enabled": false,
      "maxAge": 10886400000,
      "includeSubDomains": true,
      "preload": false
    },
    "csrf": {
      "enabled": true
    }
  },
  "logClient": {
    "remote": false,
    "level": "TRACE",
    "appenders": [
      {
        "type": "BrowserConsole",
        //        "layout": {
        //          "type": "pattern",
        //          "pattern": "%p|%c|%m%"
        //        },
        "layout": {
          "type": "THIN"
        }
      },
      {
        "type": "Ajax",
        "layout": {
          "type": "BASIC"
        },
        "threshold": 100,
        "timeout": 3000,
        "url": "/log"
      }
    ]
  },
  "defaultServices": {
    "host": "http://localhost:8080",
    "name": "applitutoriel-service"
  },
  "secteursServices": {
    // configuration multi-service : exemple de definition d'un service specifique pour les secteurs
    "host": "http://localhost:8080",
    "name": "applitutoriel-service"
  },
  "mock": {
    "enabled": true,
    "routes": "/mock/routes",
    "defaultServices": {
      // service mock par defaut : le contexte est toujours "applitutoriel/hornet-mock"
      "host": "http://localhost:${server.port}/"
      //default localhost:8888
    },
    "secteursServices": {
      // configuration multi-service : exemple de definition d'un mock specifique pour les secteurs
      "host": "http://localhost:${server.port}/",
      "name": "applitutoriel/hornet-mock"
    }
  },
  "fullSpa": {
    "enabled": false,
    "host": "",
    "name": "/services",
    "staticPath": ""
  },
  "authentication": {
    "loginUrl": "/login",
    "logoutUrl": "/logout",
    "cas": {
      "enabled": false,
      "configuration": {
        "hostUrlReturnTo": "http://localhost:8888",
        "urls": {
          "casValidate": "http://cas-url/serviceValidate",
          "casLogin": "http://cas-url/login",
          "casLogout": "http://cas-url/logout"
        }
      }
    }
  },
  "cache": {
    "enabled": true,
    "timetolive": 60
  }
}

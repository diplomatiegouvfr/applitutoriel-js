{
  "contextPath": "applitutoriel",
  "welcomePage": "/accueil",
  "server": {
    "route": "js1",
    "port": 8888,
    "portMonitor": 9999,
    "keepAlive": true,
    "keepAliveTimeout": 15000,
    "maxConnections": 100,
    "timeout": 300000,
    "uploadFileSize": 1000000,
    "sessionTimeout": 1800000,
    "stackTraceLimit": 100
